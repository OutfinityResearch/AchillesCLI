{
    "container": "node:22-alpine",
    "cli": "node /code/achilles-cli.mjs",
    "about": "AchillesCLI is a terminal-first companion that drives GAMP-style specification authoring with an LLM-assisted skill system. It manages URS/FS/NFS/DS documents, links them to tests, and lets you rebuild code safely when projects drift or break.",
    "enable": [
        "soplangAgent global"
    ],
    "repos": {
        "SOPLangBuilder": "https://github.com/PloinkyRepos/SOPLangBuilder.git"
    },
    "env": [
        {
            "name": "PLOINKY_ROUTER_URL"
        },
        {
            "name": "OPENAI_API_KEY"
        },
        {
            "name": "ANTHROPIC_API_KEY"
        },
        {
            "name": "GEMINI_API_KEY"
        },
        {
            "name": "OPENROUTER_API_KEY"
        },
        {
            "name": "XAI_API_KEY"
        },
        {
            "name": "HUGGINGFACE_API_KEY"
        },
        {
            "name": "MISTRAL_API_KEY"
        }
    ]
}
